<h2><%=h @link.filename %></h2>

<div class="links">
<p><%= h("#{@link.description} - ") unless @link.description.blank? %>
   <span class="author"><%= @link.author %>, <%= format_time(@link.created_on) %></span></p>
<p><%= link_to_link @link, :text => l(:button_download), :download => true -%>
   <span class="size">(<%= number_to_human_size @link.filesize %>)</span></p>

</div>
&nbsp;
<%= render :partial => 'common/diff', :locals => {:diff => @diff, :diff_type => @diff_type} %>

<% html_title @link.filename %>

<% content_for :header_tags do -%>
    <%= stylesheet_link_tag "scm" -%>
<% end -%>
